{
  "kind": "Deployment",
  "id": "backup",
  "image": "liferaycloud/backup:5.19.0",
  "memory": 1024,
  "cpu": 2,
  "scale": 1,
  "loadBalancer": {
    "targetPort": 3000
  },
  "readinessProbe": {
    "httpGet": {
      "path": "/",
      "port": 3000
    },
    "initialDelaySeconds": 0,
    "failureThreshold": 5,
    "periodSeconds": 10,
    "timeoutSeconds": 10
  },
  "livenessProbe": {
    "httpGet": {
      "path": "/",
      "port": 3000
    },
    "initialDelaySeconds": 0,
    "failureThreshold": 5,
    "periodSeconds": 10,
    "timeoutSeconds": 10
  },
  "startupProbe": {
    "httpGet": {
      "path": "/",
      "port": 3000
    },
    "initialDelaySeconds": 0,
    "failureThreshold": 60,
    "periodSeconds": 10,
    "timeoutSeconds": 10
  },
  "env": {
    "LCP_BACKUP_CREATE_SCHEDULE": "",
    "LCP_BACKUP_RESTORE_SCHEDULE": "",
    "LCP_GCP_DATABASE_CHARSET": "utf8mb4",
    "LCP_GCP_DATABASE_COLLATION": "utf8mb4_unicode_ci"
  },
  "dependencies": [
    "database",
    "liferay"
  ],
  "environments": {
    "infra": {
      "deploy": false
    }
  }
}